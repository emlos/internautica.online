<header class="header container">
    <h1 class="title">
        <a href="{{ about.url }}">{{ about.title }}</a>
    </h1>
    <nav class="nav-container">
        <ul class="nav-links">
            {% for link in header.links %}
                {% if link.show %}
                    <li class="nav-link">
                        <a href="{{ link.url }}">{{ link.name }}</a>
                        {% if link.suburls %}
                            <ul class="sub-links">
                                {% for url in link.suburls %}
                                    <li class="sub-link">
                                        <a href="{{ url.url }}">{{ url.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>
</header>