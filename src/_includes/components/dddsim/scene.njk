>
	<div id="background-panel" class="dddsim-characters" style="">
		<div id="options-button" class="dddsim-options-button disabled"></div>

		<!-- choices via  script -->
		<div id="choice-panel"class="dddsim-choice-area"></div>

		<div id="overlay"class="overlay state-choice"></div>

		<!-- sprites via  script -->
