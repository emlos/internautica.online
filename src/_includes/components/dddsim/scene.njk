<!-- image backdrop -->
<section
	id="scene-container"
	class="dddsim-scene">
	<div
		id="background-panel"
		class="dddsim-characters">
		<div
			id="options-button"
			class="dddsim-options-button disabled"></div>

		<!-- choices via  script -->
		<div
			id="choice-panel"
			class="dddsim-choice-area"></div>

		<div
			id="overlay"
			class="overlay state-choice"></div>

		<!-- sprites via  script -->
		<div
			id="sprite-panel"
			class="dddsim-characters-sprites"></div>
	</div>

	<div
		id="talk-panel"
		class="dddsim-talk-area">
		<div class="dddsim-talkbox">
			<div
				id="nametag"
				class="dddsim-talkbox-nametag panel">
				SPEAKER
			</div>
			<div class="dddsim-talkbox-area">
				<p id="line">TEXT SPOKEN BY CHARACTER</p>
				<!-- textinput-->
				<div id="input-textbox-panel" class="dddsim-talkbox-input dddsim-talkbox-textinput">
					<button id="random-textinput-button" class="dddsim-input-textrandom enabled"></button>
					<input 
						maxlength='15'
						placeholder="Name..."
						id="talkbox-text-input"
						type="text" />
					<button id="confirm-textinput-button" class="dddsim-input-confirm enabled"></button>
				</div>
			</div>
			<button
				id="next-line-button"
				class="dddsim-talkbox-nextbutton enabled"></button>
		</div>

		<div
			class="dddsim-talkbox-side-menu"
			id="game-menu">
			<div class="dddsim-talkbox-menu-list">
				<button
					class="dddsim-talkbox-menu-item enabled panel"
					id="dddsim-start-menu-item">
					<p>Start</p>
				</button>
				<button
					class="dddsim-talkbox-menu-item enabled panel"
					id="dddsim-save-menu-item">
					<p>Save</p>
				</button>
				<button
					class="dddsim-talkbox-menu-item enabled panel"
					id="dddsim-load-menu-item">
					<p>Load</p>
				</button>
				<button
					class="dddsim-talkbox-menu-item disabled panel"
					id="dddsim-back-menu-item">
					<p>&lt;&lt;</p>
				</button>
			</div>
		</div>
	</div>
</section>

<script>
	init();
</script>
