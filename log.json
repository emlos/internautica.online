goto":"end"}],"parentChapter":"first_chapter","background":"Ruins"},{"id":"ambush_hid","dialogues":[{"text":"You hear shouts as you crawl into your stagecoach","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Looking out, you see your guards draw their weapons.","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Good! Keep your head down, pipsqueak!","speaking":"Dismas","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"This is no way to talk to our generous benefactor, thief.","speaking":"Reynauld","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Now to arms! T'is an ambush!","speaking":"Reynauld","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Fuckin'-","speaking":"Dismas","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Yeah Yeah, I'm comin'","speaking":"Dismas","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Your voice carries over the cacophonous sounds of battle, as you watch and command from the back.","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Directing them, you make sure to align the situation to the safety of...","speaking":"Narrator","characters":[],"input":null,"choices":[{"text":"Dismas.","flags":["dismas_route_started"],"goto":""},{"text":"Reynauld.","flags":["reynauld_route_started"],"goto":""}],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Blood drips from blades, after the dust falls.","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Your eyes dart to Dismas, assessing him of any harm.","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"He catches you looking at him from the corner of his eye, and the corners of his eyes lift.","speaking":"Narrator","characters":[],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Heh, not even a scratch. Not bad.","speaking":"Dismas","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"So, ya gonna keep starin', or are we marchin' on? It's a day's walk to the hamlet from 'ere.","speaking":"Dismas","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Crimson ribbons adorn the knight's second skin as the battle ends.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Immediately you survey your armeds companions state, making sure the blood is not his.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"He turns to you, sheathing his sword, and does somethign sexy idk reynauld.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"Thou insincts were shrewd, Light be thanked","speaking":"Reynauld","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"You can't be sure but he sounds like he's smiling under all that armor.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"We need to make haste. 'Tis a few hour's walk til we reach the estate, we must march swiftly.","speaking":"Reynauld","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"In the end, blades glinting, guns blazing, your two companions managed to fend off the bringand's ambuscade.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":null},{"text":"As dawn broke, you took the trek to the estate, protected by light and darkness alike.","speaking":"Narrator","characters":[{"name":"Dismas","sprites":["angry","neutral"],"defaultEmotion":"neutral"},{"name":"Reynauld","sprites":["angry","neutral"],"defaultEmotion":"neutral"}],"input":null,"choices":[],"background":null,"conditions":[],"flags":[],"goto":"end"}],"parentChapter":"first_chapter","background":"introcarriage"}],"id":"first_chapter","order":-1,"title":"The Old Road","start":"start"}]}
